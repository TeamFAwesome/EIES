<% provide(:title, "Log in") %>
<div class="content-small">
  <%= form_tag("/login", method: "post") do %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">Log in to EIES</div>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <%= label_tag(:email, "Email:") %>
          <%= email_field_tag(:email, flash[:email], class: "form-control", placeholder: "user@email.com", autofocus: true) %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password:") %>
        <%= password_field_tag(:password, nil, class: "form-control") %>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row" >
          <div class="col-md-6">
            <%= submit_tag("Login", class: "btn btn-primary form-control") %>
          </div>
          <div class="col-md-6">
            <%= link_to "Register New User", { controller: "users", action: "new" }, class: "btn btn-success form-control" %>
          </div>
        </div>
      </div>
  </div>
  <% end %>
</div>
