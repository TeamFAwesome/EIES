<tr>
  <td>
    <%= content_tag :span, entity[:name] %>
  </td>
  <td class="form-group">
    <%= content_tag :span, entity[:domain] %>
  </td>
  <td class="form-group">
    <%= content_tag :span, entity[:port] %>
  </td>
  <td><%= link_to "Edit", edit_entity_path(entity), class: "btn btn-primary" %></td>
  <td><%= link_to "Delete", entity, method: "delete", class: "btn btn-danger" %></td>
</tr>
